<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8C9EFF"
    tools:context="com.example.android.musicalstructureapp.PaymentsActivity">


    <TextView
        android:id="@+id/payment_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="@string/payment_message"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/song_purchase_editBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/payment_message"
        android:layout_margin="12dp"
        android:hint="Type Song Name to Purchase"
        android:inputType="textCapWords" />


    <Button
        android:id="@+id/payment_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/song_purchase_editBox"
        android:layout_marginLeft="12dp"
        android:text="Purchase this Song"
        android:onClick="placeOrder"/>

    <TextView
        android:id="@+id/success_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/payment_button"
        android:layout_margin="12dp"
        android:textStyle="italic" />


</RelativeLayout>
