<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.musicalstructureapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/playicon"
        android:label="@string/app_label"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SongsActivity"
            android:label="@string/songs"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SongDetailsActivity"
            android:label="@string/song_detail"
            android:parentActivityName=".SongsActivity" />
        <activity
            android:name=".PlaylistActivity"
            android:label="@string/playlist"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".PlaylistDetailsActivity"
            android:label="@string/playlist_details"
            android:parentActivityName=".PlaylistActivity" />
        <activity
            android:name=".PaymentsActivity"
            android:label="@string/payments"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".HindiPlaylistDetailsActivity"
            android:label="@string/hindiPlaylist"
            android:parentActivityName=".PlaylistActivity" />
        <activity
            android:name=".MixedPlaylistActivity"
            android:label="@string/mixedPlaylist"
            android:parentActivityName=".PlaylistActivity" />
        <activity
            android:name=".PlayMusicActivity"
            android:label="@string/playingMusic"
            android:parentActivityName=".SongsActivity" />
    </application>

</manifest>